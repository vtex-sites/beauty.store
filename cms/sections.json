[
  {
    "name": "BannerText",
    "schema": {
      "title": "Banner Text",
      "description": "Add a quick promotion with a text/action pair",
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "caption": {
          "type": "string"
        },
        "actionPath": {
          "type": "string",
          "title": "Action link"
        },
        "actionLabel": {
          "type": "string",
          "title": "Action label"
        }
      }
    }
  },
  {
    "name": "Hero",
    "schema": {
      "title": "Hero",
      "description": "Add a quick promotion with an image/action pair",
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "subtitle": {
          "type": "string"
        },
        "linkText": {
          "type": "string",
          "title": "Link text"
        },
        "link": {
          "type": "string",
          "title": "Link path"
        },
        "imageSrc": {
          "type": "string",
          "title": "Image",
          "widget": {
            "ui:widget": "image-uploader"
          }
        },
        "imageAlt": {
          "type": "string",
          "title": "Alt text"
        }
      }
    }
  },

  {
    "name": "Incentives",

    "schema": {
      "title": "Barra de Vantagens",
      "description": "Adicione os itens da barra de vantagens",
      "type": "object",

      "properties": {
        "incentives": {
          "title": "Vantagens",
          "type": "array",
          "maxItems": 3,

          "items": {
            "title": "Vantagem",
            "type": "object",

            "properties": {
              "icon": {
                "title": "Ícone",
                "type": "string",
                "enum": ["Truck"]
              },

              "title": {
                "title": "Título",
                "type": "string"
              },

              "text": {
                "title": "Texto",
                "type": "string"
              }
            }
          }
        }
      }
    }
  },

  {
    "name": "Mosaic",

    "schema": {
      "title": "Mosaico",
      "description": "Adicione o conteúdo do mosaico",
      "type": "object",

      "properties": {
        "topic": {
          "title": "Tópico",
          "type": "string"
        },

        "title": {
          "title": "Título",
          "type": "string"
        },

        "buttonLink": {
          "title": "Caminho do Link",
          "type": "string"
        },

        "buttonLabel": {
          "title": "Texto do Link",
          "type": "string"
        },

        "desktopImages": {
          "title": "Imagens Desktop",
          "type": "array",
          "maxItems": 5,

          "items": {
            "title": "Imagem",
            "type": "string",

            "widget": {
              "ui:widget": "image-uploader"
            }
          }
        },

        "mobileImages": {
          "title": "Imagens Mobile",
          "type": "array",
          "maxItems": 4,

          "items": {
            "title": "Imagem",
            "type": "string",

            "widget": {
              "ui:widget": "image-uploader"
            }
          }
        }
      },

      "required": ["topic", "title", "buttonLink", "buttonLabel"]
    }
  }
]
